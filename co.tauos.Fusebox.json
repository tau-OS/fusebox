{
    "app-id": "co.tauos.Fusebox",
    "runtime" : "co.tauos.Platform",
    "runtime-version" : "daily",
    "sdk" : "co.tauos.Sdk",
    "command": "co.tauos.Fusebox",
    "desktop-file-name-suffix" : " (Development)",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--system-talk-name=org.freedesktop.UDisks2",
        "--system-talk-name=org.freedesktop.hostname1",
        "--talk-name=org.freedesktop.Flatpak",
        "--talk-name=org.gnome.SessionManager"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
			"name": "libgtop",
			"sources": [
				{
					"type": "archive",
					"url": "https://download.gnome.org/sources/libgtop/2.40/libgtop-2.40.0.tar.xz",
					"sha256": "78f3274c0c79c434c03655c1b35edf7b95ec0421430897fb1345a98a265ed2d4"
				}
			]
		},
        {
            "name" : "fusebox",
            "builddir" : true,
            "buildsystem" : "meson",
            "config-opts" : [
                "-Dexample=false"
            ],
            "sources" : [
                {
                    "type" : "dir",
                    "path" : "."
                }
            ]
        }
    ]
}
